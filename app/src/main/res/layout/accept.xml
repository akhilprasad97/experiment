<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accept_Request">

    <Button
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/charge"
        android:layout_alignRight="@+id/charge"
        android:layout_below="@+id/reject"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="112dp"
        android:text="ACCEPT"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="277dp" />

    <Button
        android:id="@+id/reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="123dp"
        android:layout_toEndOf="@+id/accept"
        android:layout_toRightOf="@+id/accept"
        android:text="REJECT"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/charge"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="34dp"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="152dp" />

    <TextView
        android:id="@+id/recepient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/charge"
        android:layout_alignStart="@+id/charge"
        android:layout_below="@+id/charge"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="50dp"
        android:text="Tasdsd" />
</RelativeLayout>